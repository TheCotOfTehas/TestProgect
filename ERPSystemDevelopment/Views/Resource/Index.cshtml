@model IEnumerable<Resource>

@{
    ViewData["Title"] = "Index";
}

<h2>Ресурсы</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var resource in Model)
        {
            <tr>
                <td>
                    <input type="text" asp-for="@resource.Id" />
                </td>
                <td>
                    <input type="text" asp-for="@resource.Name" />
                </td>
                <td>
                    <input type="text" asp-for="@resource.Status" />
                </td>
@*                 <td>
                    <a asp-action="Edit" asp-route-id="@resource.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@resource.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@resource.Id">Delete</a>
                </td> *@
                <td>
                    <form method="post" asp-action="Edit">
                        <input type="hidden" name="id" value="@resource.Id" />
                        <button type="submit">Save</button>
                    </form>
                </td>
                <td>
                    <form method="post" asp-action="Details">
                        <input type="hidden" name="id" value="@resource.Id" />
                        <button type="submit">Details</button>
                    </form>
                </td>
                <td>
                    <form method="post" asp-action="Delete">
                        <input type="hidden" name="id" value="@resource.Id" />
                        <button type="submit">Delete</button>
                    </form>
                </td>

            </tr>
        }
    </tbody>
</table>