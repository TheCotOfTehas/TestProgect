@using ManagementApplication.BaseEntity
@model UnitMeasurement

@{
    ViewData["Title"] = "Create";
}

<h1>Создать</h1>

<h4>Единицу измерения</h4>
<hr />
<div class="row">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div>
            @Html.DropDownList("Status", new SelectList(new string[] { StatusTD.Archived.ToString(), StatusTD.Active.ToString() }), "Выберите Статус")
        </div>
        <div class="form-group">
            <input type="submit" value="Создать" class="btn btn-primary" />
        </div>
    </form>
</div>

<div>
    <a asp-action="Index">Вернуться к списку</a>
</div>
